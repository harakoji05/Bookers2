<div class="col-xs-9">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
		<% if @user.errors.any? %>
			<div>
				<h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
				     <li><%= message %></li>
				     <% end %>
				</ul>
			</div>
		<% end %>
		<div>
			<label class="">Name</label>
			<%= f.text_field :name, autofocus: true %>
		</div>
		<div>
			<label class="">Image</label>
			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
		</div>
		<div>
			<label class="">Intoroduction</label>
			<%= f.text_area :introduction, autofocus: true %>
		</div>
		<%= f.submit "Update User" %>
	<% end %>
</div>
